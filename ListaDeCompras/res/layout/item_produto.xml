<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+item_produto/txtproduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+item_produto/chcproduto"
            android:layout_alignBottom="@+item_produto/chcproduto"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+item_produto/chcproduto"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+item_produto/chcproduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+item_produto/txtpreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+item_produto/txtproduto"
            android:layout_toLeftOf="@+item_produto/chcproduto"
            android:text="R$ 50,40" />

    </RelativeLayout>

</LinearLayout>